}
<style>


    h1 {
        font-family: "Times New Roman";
        letter-spacing: 5px;
    }
</style>
<h1>Delete</h1>

@if (ViewBag.advertisementsExist)
{
    <br />
    <h3>Delete all advertisements before deleting the community.</h3>
    <a asp-action="Index">Back to List</a>
}
else
{

    <h3>Are you sure you want to delete this?</h3>
    <div>
        <h4>Community</h4>
        <hr />
        <dl class="row">
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.Title)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.Title)
            </dd>
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.Budget)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.Budget)

@model Assignment1.Models.ViewModels.CommunityViewModel

@{ ViewData["Title"] = "EditMemberships"; }

<h1>Edit</h1>

<h4>Student</h4>
<hr />

<div class="row">
    <div class="col-md-4">
        <form asp-action="EditMemberships">

            <dl class="row">

                @foreach (var item in Model.Communities){
                    
                    bool addCom = Model.CommunityMemberships.Where(i => i.CommunityID == item.ID).Count() > 0;

                    if (!addCom)
                    {
                        @item.Title <a asp-action="AddMemberships" asp-route-studentId="@Model.Students.First().ID" asp-route-communityId="@item.ID">Register</a>
                    }

                    else
                    {
                        @item.Title  <a asp-action="RemoveMemberships" asp-route-studentId="@Model.Students.First().ID" asp-route-communityId="@item.ID">Unregister</a>
                    }

                 }

            </dl>
        </form>
    </div>
</div>
<hr />
<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
